<div class="row">
	<h1><%= @restaurant.name %></h1>
</div>
<div class="row">
	<div class="col-md-6">
		<p>
			<%= @restaurant.description %>
		</p>
	</div>

	<div class="col-md-6">
		<h3>Comments</h3>
			<% props = "{restaurantId: #{@restaurant.id}, comments: #{raw(render(template: 'comments/index.json.jbuilder'))}}"%>
			<%= client('CommentSection', 'cs', props) %>
	</div>
</div>
